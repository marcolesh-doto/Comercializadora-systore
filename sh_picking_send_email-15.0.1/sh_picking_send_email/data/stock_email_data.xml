<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="email_template_edi_stock" model="mail.template">
        <field name="name">Stock Picking: Send by email</field>
        <field name="model_id" ref="stock.model_stock_picking" />
        <field name="email_from">{{object.create_uid.email_formatted }}</field>
        <field name="partner_to">{{object.partner_id.id}}</field>
        <field name="subject">{{object.company_id.name}} (Ref {{object.name or 'n/a' }})</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear <b><t t-out="object.partner_id.name or ''" /></b>
                    <t t-if="object.partner_id.parent_id">
                    (<t t-out="object.partner_id.parent_id.name or ''" />)
                    </t>
                    <br />
                    <br />
                    Here is your Delivery Order Number and we have attached Delivery Slip.
                    <br />
                    <br />
                    <t t-out="object.name or ''" />
                </p>
            </div>
        </field>
        <field name="report_template" ref="stock.action_report_delivery" />
        <field name="report_name">{{(object.name or '').replace('/','_')}}</field>
        <field name="lang">{{object.partner_id.lang}}</field>
        <field name="auto_delete" eval="False" />
    </record>
</odoo>
